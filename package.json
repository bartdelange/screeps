{
  "scripts": {
    "build": "rollup -c --environment DEST:local",
    "build:main": "rollup -c --environment DEST:main",
    "build:pserver": "NODE_OPTIONS=--use-system-ca rollup -c --environment DEST:pserver",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "watch": "rollup -c -w --environment DEST:local",
    "watch:main": "rollup -c -w --environment DEST:main",
    "watch:pserver": "NODE_OPTIONS=--use-system-ca rollup -c -w --environment DEST:pserver"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.2.1",
    "@types/screeps": "^3.3.8",
    "prettier": "^3.3.3",
    "rollup": "^4.57.1",
    "rollup-plugin-screeps": "^1.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.12.0"
}
